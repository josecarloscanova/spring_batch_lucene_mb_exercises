<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:b="http://www.springframework.org/schema/batch"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
       	http://www.springframework.org/schema/beans/spring-beans.xsd
      	http://www.springframework.org/schema/batch
      	http://www.springframework.org/schema/batch/spring-batch.xsd
       	http://www.springframework.org/schema/aop
 		http://www.springframework.org/schema/aop/spring-aop.xsd">

    <import resource="classpath:spring-batch-file-readers/track_name_file_reader.xml" /> 
    <import resource="classpath:spring-batch-file-writers/track_name_index_writer.xml" />
    
    <bean lazy-init="true" id="trackNameStepListener" class="org.nanotek.lucene.job.listeners.IndexWriterStepListener"> 
		<property name="indexWriter" ref="indexWriter"></property>
	</bean>
	
	<bean lazy-init="true" id="trackNameChunkListener" class="org.nanotek.lucene.job.listeners.IndexWriterChunkListener">
		<property name="indexWriter" ref="indexWriter"></property>
	</bean>
	
    <b:job id="trackNameIndexJob" job-repository="jobRepository" restartable="false">
	<b:step id="trackNameIndexLoad">
	    	<b:tasklet>
	    		<b:chunk reader="trackNameReader" commit-interval="10000" writer="trackNameWriter"></b:chunk>
	    		<b:listeners>
	    			<b:listener ref="trackNameChunkListener"/>
	    		</b:listeners>
	    	</b:tasklet>
	    	<b:listeners>
            		<b:listener ref="trackNameStepListener"/>
       		</b:listeners>
	    </b:step>
	</b:job>
</beans>